{
  "Statement": [
    {
      "Action": "dynamodb:BatchGetItem",
      "Effect": "Allow",
      "Resource": "${dynamo_db_queue_table_arn}",
      "Sid": "getDynamoDB"
    },
    {
      "Action": "ssm:GetParameter",
      "Effect": "Allow",
      "Resource": "${ssm_parameter_arn}",
      "Sid": "readSSM"
    },
    {
      "Action": [
        "logs:PutLogEvents",
        "logs:CreateLogStream",
        "logs:CreateLogGroup"
      ],
      "Effect": "Allow",
      "Resource": [
        "arn:aws:logs:eu-west-2:${account_id}:log-group:/aws/lambda/${lambda_name}:*:*",
        "arn:aws:logs:eu-west-2:${account_id}:log-group:/aws/lambda/${lambda_name}:*"
      ],
      "Sid": "readWriteLogs"
    }
  ],
  "Version": "2012-10-17"
}
